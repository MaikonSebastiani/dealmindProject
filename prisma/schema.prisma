generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())

  deals     Deal[]
  accounts  Account[]
  sessions  Session[]
  readAlerts ReadAlert[]
}

model Deal {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  propertyName String?
  propertyType String?
  address      String?
  propertyLink String?  // Link do imóvel (ex.: anúncio, leilão); opcional
  status       String   @default("Em análise")

  purchasePrice        Float
  acquisitionCosts     Float
  monthlyRent          Float
  monthlyExpenses      Float
  annualPropertyTax    Float

  downPayment          Float?
  monthlyInstallment   Float?

  downPaymentPercent      Float?
  auctioneerFeePercent    Float?
  advisoryFeePercent       Float?   // Porcentagem de assessoria sobre valor de compra
  itbiPercent             Float?
  registryCost            Float?
  expectedRoiPercent      Float?   // ROI esperado sobre investimento (%); base para viável ou não

  financingEnabled        Boolean @default(false)
  interestRateAnnual      Float?
  termMonths              Int?
  amortizationType        String?

  iptuDebt                Float?
  condoDebt               Float?

  renovationCosts         Float?   // Custos de reforma
  evacuationCosts          Float?   // Custos adicionais (custo de desocupação)

  resalePrice             Float?
  resaleDiscountPercent   Float?
  brokerFeePercent        Float?
  monthlyCondoFee         Float?
  monthlyIptu             Float?
  expectedSaleMonths      Int     @default(12)

  monthlyCashFlow      Float
  annualCashFlow       Float
  roi                  Float
  capRate              Float
  paybackYears         Float

  riskNegativeCashFlow Boolean
  riskLowROI           Boolean
  riskHighLeverage     Boolean

  // Documentos
  propertyRegistryFileName String?
  propertyRegistryData     Bytes?

  auctionNoticeFileName    String?
  auctionNoticeData        Bytes?

  // Análise por IA (JSON serializado)
  aiAnalysisData           String?  // JSON com dados extraídos
  aiAnalysisDate           DateTime?
  aiAnalysisConfidence     Float?

  // Due Diligence (análise jurídica)
  dueDiligenceData         String?  // JSON com resultado completo
  dueDiligenceDate         DateTime?
  dueDiligenceRiskScore    String?  // low, medium, high, critical
  dueDiligenceRiskPercent  Float?   // 0-100

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  statusHistory DealStatusChange[]

  @@index([userId, createdAt])
}

model DealStatusChange {
  id         String   @id @default(uuid())
  dealId     String
  deal       Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  
  fromStatus String?  // null = status inicial (criação do deal)
  toStatus   String
  changedAt  DateTime @default(now())
  
  @@index([dealId, changedAt])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ReadAlert {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  alertId   String   // ID do alerta (ex: "low_roi_123", "no_ai_456")
  readAt    DateTime @default(now())

  @@unique([userId, alertId])
  @@index([userId, readAt])
}
