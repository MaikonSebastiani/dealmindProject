generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())

  deals     Deal[]
  accounts  Account[]
  sessions  Session[]
}

model Deal {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  propertyName String?
  propertyType String?
  address      String?
  status       String   @default("Em an√°lise")

  purchasePrice        Float
  acquisitionCosts     Float
  monthlyRent          Float
  monthlyExpenses      Float
  annualPropertyTax    Float

  downPayment          Float?
  monthlyInstallment   Float?

  downPaymentPercent      Float?
  auctioneerFeePercent    Float?
  itbiPercent             Float?
  registryCost            Float?

  financingEnabled        Boolean @default(false)
  interestRateAnnual      Float?
  termMonths              Int?
  amortizationType        String?

  iptuDebt                Float?
  condoDebt               Float?

  resalePrice             Float?
  resaleDiscountPercent   Float?
  brokerFeePercent        Float?
  monthlyCondoFee         Float?
  monthlyIptu             Float?
  expectedSaleMonths      Int     @default(12)

  monthlyCashFlow      Float
  annualCashFlow       Float
  roi                  Float
  capRate              Float
  paybackYears         Float

  riskNegativeCashFlow Boolean
  riskLowROI           Boolean
  riskHighLeverage     Boolean

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([userId, createdAt])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

